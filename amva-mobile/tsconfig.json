{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["src/api/*"],
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"]
    },
    "types": ["expo-secure-store", "react-native", "node"]
  },
  "include": ["src", "App.tsx", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}
