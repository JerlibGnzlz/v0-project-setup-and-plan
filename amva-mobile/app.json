{
  "expo": {
    "name": "AMVA Móvil",
    "slug": "amva-movil",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "amva-app",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/amvamovil.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a1628"
    },
    "icon": "./assets/images/amvamovil.png",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.vidaabundante.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Necesitamos acceso a tu cámara para tomar fotos de comprobantes de pago.",
        "NSPhotoLibraryUsageDescription": "Necesitamos acceso a tu galería para seleccionar comprobantes de pago."
      },
      "plugins": [
        [
          "expo-notifications",
          {
            "icon": "./assets/images/amvamovil.png",
            "color": "#22c55e",
            "sounds": ["default"]
          }
        ]
      ]
    },
    "android": {
      "package": "org.vidaabundante.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/amvamovil.png",
        "backgroundColor": "#0a1628"
      },
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "plugins": [
        [
          "expo-notifications",
          {
            "icon": "./assets/images/amvamovil.png",
            "color": "#22c55e",
            "sounds": ["default"]
          }
        ]
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "amva-app"
            },
            {
              "scheme": "https",
              "host": "vidaabundante.org"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {},
    "extra": {
      "eas": {
        "projectId": "amva-mobile-example"
      },
      "googleClientId": "378853205278-slllh10l32onum338rg1776g8itekvco.apps.googleusercontent.com",
      "googleAndroidClientId": "378853205278-c2e1gcjn06mg857rcvprns01fu8pduat.apps.googleusercontent.com"
    }
  }
}
